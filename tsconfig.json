{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es2015", "dom"],
    "strict": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
